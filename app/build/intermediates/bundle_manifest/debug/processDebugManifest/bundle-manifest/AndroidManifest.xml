<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.herrlestrate.kadushko_artyom_info"
    android:versionCode="2"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.finsky.permission.BIND_GET_INSTALL_REFERRER_SERVICE" />

    <application
        android:name="me.herrlestrate.kadushko_artyom_info.Application"
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.herrlestrate.kadushko_artyom_info.WelcomeActivity"
            android:launchMode="singleInstance"
            android:stateNotNeeded="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="me.herrlestrate.kadushko_artyom_info.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LauncherActivity" />
        </activity>
        <activity
            android:name="me.herrlestrate.kadushko_artyom_info.LauncherActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
        <receiver
            android:name=".ApplicationBroadcaster">
            <intent-filter android:priority="666">
                <action android:name="android.intent.action.PACKAGE_INSTALL"/>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>
        -->

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8b7c9978b6b746ee09d14677a1a39318225b6d49" />

        <service
            android:name="me.herrlestrate.kadushko_artyom_info.ImageService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <provider
            android:name="com.crashlytics.android.CrashlyticsInitProvider"
            android:authorities="me.herrlestrate.kadushko_artyom_info.crashlyticsinitprovider"
            android:exported="false"
            android:initOrder="90" />
        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="me.herrlestrate.kadushko_artyom_info.com.squareup.picasso"
            android:exported="false" /> <!-- Yandex Mobile Metrica Analytics: common service -->
        <service
            android:name="com.yandex.metrica.MetricaService"
            android:enabled="true"
            android:exported="true"
            android:process=":Metrica" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.yandex.metrica.IMetricaService" />

                <data android:scheme="metrica" />
            </intent-filter>

            <meta-data
                android:name="metrica:api:level"
                android:value="76" />
        </service>
        <service
            android:name="com.yandex.metrica.ConfigurationService"
            android:enabled="true"
            android:exported="false"
            android:process=":Metrica" >
            <meta-data
                android:name="metrica:configuration:api:level"
                android:value="3" />

            <intent-filter>

                <!-- This action was used by old background location collecting and should not be used again -->
                <!-- <action android:name="com.yandex.metrica.configuration.ACTION_START"/> -->
                <action android:name="com.yandex.metrica.configuration.ACTION_INIT" />
            </intent-filter>
        </service>
        <service
            android:name="com.yandex.metrica.ConfigurationJobService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":Metrica" >
        </service> <!-- Yandex Mobile Metrica Analytics: main receiver -->
        <receiver
            android:name="com.yandex.metrica.MetricaEventHandler"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="me.herrlestrate.kadushko_artyom_info.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>