<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:textAlignment="center">

    <me.herrlestrate.kadushko_artyom_info.fragments.launcher.SquareView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid_app_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:drawable/sym_def_app_icon"/>

    <TextView
        android:id="@+id/grid_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:textAlignment="center"
        android:ellipsize="end"
        android:shadowColor="?attr/colorBackgroundFloating"
        android:shadowRadius="12"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="@string/appTitle"/>

</LinearLayout>
